.add-app-offer
  width 100%
  height 300px
  box-shadow 0 3px 10px rgba(0, 0, 0, 0.1)
  background-color #f7f7f7
  padding 10px
  display flex
  justify-content center

  &__question
    margin-bottom 20px

  &__buttons
    margin-bottom 10px
    display flex
    flex-direction row
    justify-content space-between

  &__button
    height 20px
    width 40px
    border-radius 10px
    box-shadow 0 1px 5px rgba(0, 0, 0, 0.1)


