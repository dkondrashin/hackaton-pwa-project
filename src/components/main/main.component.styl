@require '../../style/vars.styl';

.main-wrapper
  box-sizing border-box
  padding 10px
  width 100%
  min-width 300px
  min-height 600px
  background $orange-red-l-r-gradient

.main
  width 100%

  &__title
    text-align center
    font-size 30px
    margin-bottom 30px

  &__random-button
    border-radius 10px
    height 40px
    width 140px
    box-shadow 0 3px 10px rgba(0, 0, 0, 0.1)
    cursor pointer
    font-size 18px
    font-weight 500

  &__generated
    text-align center
    font-size 24px
    height 20px

    &-wrapper
      display flex
      justify-content center
      margin-bottom 20px
