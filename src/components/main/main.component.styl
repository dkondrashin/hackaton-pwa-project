.main-wrapper
  padding 20px
  width 100%
  min-width 320px
  min-height 600px

.main
  border 1px solid black
  width 100%

  &__title
    text-align center
    font-size 30px
    margin-bottom 30px

  &__random-button
    border-radius 10px
    height 40px
    width 140px
    box-shadow 0 3px 10px rgba(0, 0, 0, 0.1)

  &__generated
    text-align center
    font-size 24px
    height 20px

    &-wrapper
      display flex
      justify-content center
      margin-bottom 20px
